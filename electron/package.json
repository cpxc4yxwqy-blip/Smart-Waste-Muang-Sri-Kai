{
  "name": "waste-smart-electron",
  "version": "0.0.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.sikhai.wastesmart",
    "productName": "Smart Waste Dashboard",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "../dist/**/*"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "../public/icons/icon-512.png",
      "sign": false
    },
    "mac": {
      "target": "dmg",
      "icon": "../public/icons/icon-512.png"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "../public/icons/icon-512.png"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
